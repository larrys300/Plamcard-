                </select>
            </div>

            <div class="form-group">
                <label for="tradeType">Type d'ordre</label>
                <select id="tradeType">
                    <option value="buy">Achat (Buy)</option>
                    <option value="sell">Vente (Sell)</option>
                </select>
            </div>

            <div class="form-group">
                <label for="entryPrice">Prix d'entrée</label>
                <input type="number" id="entryPrice" placeholder="Ex: 2000.00 (Gold) / 1.08500 (EUR/USD) / 38500 (US30)" step="any">
            </div>

            <div class="form-group">
                <label for="lotSize">Lot</label>
                <input type="number" id="lotSize" placeholder="Ex: 0.01 / 0.10 / 1.00" step="0.01">
            </div>

            <div class="form-group">
                <label for="riskAmount">Risque ($)</label>
                <input type="number" id="riskAmount" placeholder="Ex: 5, 10, 50" step="0.01">
            </div>

            <div class="form-group">
                <label for="targetAmount">Gain visé ($)</label>
                <input type="number" id="targetAmount" placeholder="Ex: 10, 20, 100" step="0.01">
            </div>

            <button id="calculateBtn">Calculer</button>
        </main>

        <section class="results-container">
            <div class="result-item">
