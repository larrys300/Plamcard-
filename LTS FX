    <script>
        // JavaScript : Logique du Calculateur
        document.addEventListener("DOMContentLoaded", function() {
            
            // Sélectionne les éléments du DOM
            const assetType = document.getElementById("assetType");
            const tradeType = document.getElementById("tradeType");
            const entryPrice = document.getElementById("entryPrice");
            const lotSize = document.getElementById("lotSize");
            const riskAmount = document.getElementById("riskAmount");
            const targetAmount = document.getElementById("targetAmount");
            const calculateBtn = document.getElementById("calculateBtn");

            const lotResult = document.getElementById("lotResult");
            const stopLossResult = document.getElementById("stopLossResult");
            const takeProfitResult = document.getElementById("takeProfitResult");

            // Fonction pour le calcul
            calculateBtn.addEventListener("click", function() {
                
                // Récupère les valeurs et les convertit en nombres
                const asset = assetType.value;
                const type = tradeType.value;
                const entry = parseFloat(entryPrice.value);
                const lot = parseFloat(lotSize.value);
                const risk = parseFloat(riskAmount.value);
                const target = parseFloat(targetAmount.value);

                // Vérification des entrées
                if (isNaN(entry) || isNaN(lot) || isNaN(risk) || isNaN(target) || lot <= 0 || risk <= 0 || target <= 0) {
                    alert("Veuillez remplir tous les champs avec des valeurs numériques positives.");
                    return;
                }

                let stopLossPrice = 0;
                let takeProfitPrice = 0;
                let decimals = 2; // Par défaut

                if (asset === 'gold') {
                    // Logique pour l'Or (XAU/USD)
                    // 0.01 lot de Gold = 1 once. Chaque mouvement de 1$ = 1$.
                    // Valeur par point ($) pour un lot de 0.01 = 1$.
                    // Donc, pour un lot 'x', la valeur par mouvement de 1$ est 'x' * 100.
                    const valuePerDollarMovement = lot * 100; // Combien vous gagnez/perdez pour un mouvement de 1$ du prix

                    const slDistance = risk / valuePerDollarMovement;
                    const tpDistance = target / valuePerDollarMovement;

                    if (type === 'buy') {
                        stopLossPrice = entry - slDistance;
                        takeProfitPrice = entry + tpDistance;
                    } else { // Sell
                        stopLossPrice = entry + slDistance;
                        takeProfitPrice = entry - tpDistance;
                    }
                    decimals = 2; // Prix de l'or généralement à 2 décimales

                } else if (asset === 'forex') {
                    // Logique pour le Forex (Paires de devises)
                    // La valeur d'un pip varie. Pour la plupart des paires avec USD comme devise de cotation,
                    // 0.01 lot = 0.10$ par pip. 1 lot = 10$ par pip.
                    const valuePerPip = lot * 10; 
                    
                    // Déterminer la taille du pip en fonction des décimales du prix d'entrée
                    // Ex: 1.08500 -> 5 décimales -> pip = 0.0001
                    // Ex: 150.00 -> 2 décimales -> pip = 0.01 (pour les paires JPY)
                    const entryPriceStr = entryPrice.value.toString();
                    const decimalPlaces = (entryPriceStr.split('.')[1] || '').length;
                    const pipSize = (decimalPlaces === 2) ? 0.01 : 0.0001; // Gère JPY vs autres

                    const slDistanceInPips = risk / valuePerPip;
                    const tpDistanceInPips = target / valuePerPip;

                    if (type === 'buy') {
                        stopLossPrice = entry - (slDistanceInPips * pipSize);
                        takeProfitPrice = entry + (tpDistanceInPips * pipSize);
                    } else { // Sell
                        stopLossPrice = entry + (slDistanceInPips * pipSize);
                        takeProfitPrice = entry - (tpDistanceInPips * pipSize);
                    }
                    decimals = decimalPlaces; // Garde les mêmes décimales que l'entrée

                } else if (asset === 'indices') {
                    // Logique pour les Indices Boursiers (CFD)
                    // La "valeur par point" varie énormément selon l'indice et le courtier.
                    // Ici, nous utilisons des valeurs TYPIQUES pour 1 lot standard (1.00):
                    // US30 (Dow Jones): 1$ par point pour 1 lot
                    // DE40 (DAX): 1€ par point pour 1 lot (si votre compte est en USD, 1€ ~ 1.08$)
                    // US500 (S&P 500): 10-50$ par point pour 1 lot (souvent 1$ par "mini-lot" de 0.10)
                    // NASDAQ (US100): 1-20$ par point pour 1 lot (souvent 1$ par "mini-lot" de 0.10)

                    // *** ATTENTION: CES VALEURS DOIVENT ÊTRE VÉRIFIÉES CHEZ VOTRE COURTIER ! ***
                    // Pour simplifier, nous allons supposer une valeur par point de 1$ pour 1.00 lot comme base pour le calculateur.
                    // Cela signifie 0.01$ par point pour 0.01 lot.
                    const valuePerPointForStandardLot = 1; // 1$ par point pour 1 lot (exemple pour certains indices comme le DE40 chez certains brokers)
                    const actualValuePerPoint = lot * valuePerPointForStandardLot;

                    const slDistance = risk / actualValuePerPoint;
                    const tpDistance = target / actualValuePerPoint;
                    
                    if (type === 'buy') {
                        stopLossPrice = entry - slDistance;
                        takeProfitPrice = entry + tpDistance;
                    } else { // Sell
                        stopLossPrice = entry + slDistance;
                        takeProfitPrice = entry - tpDistance;
                    }
                    decimals = 2; // Les indices ont généralement 1 ou 2 décimales

                    // Un avertissement pour l'utilisateur
                    if (lot === 0.01 && actualValuePerPoint === 0.01) {
                         alert("Attention: Pour les Indices, la 'valeur par point' varie ÉNORMÉMENT selon l'indice et le courtier. Ce calculateur suppose 1$ par point pour 1 lot standard, ce qui signifie 0.01$ par point pour un lot de 0.01. Vérifiez IMPÉRATIVEMENT les spécifications de votre courtier pour l'indice tradé !");
                    }
                }

                // Met à jour l'affichage des résultats
                lotResult.innerText = lot.toFixed(2);
                stopLossResult.innerText = stopLossPrice.toFixed(decimals);
                takeProfitResult.innerText = takeProfitPrice.toFixed(decimals);
            });
        });
    </script>
</body>
